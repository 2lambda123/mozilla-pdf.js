{
  "manifest_version": 2,
  "name": "PDF Viewer",
  "version": "PDFJSSCRIPT_VERSION",
  "description": "Uses HTML5 to display PDF files directly in Chrome.",
  "permissions": [
    "webRequest", "webRequestBlocking",
    "http://*/*.pdf",
    "https://*/*.pdf",
    "file:///*/*.pdf",
    "http://*/*.PDF",
    "https://*/*.PDF",
    "file://*/*.PDF"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*.pdf",
        "https://*/*.pdf",
        "file:///*/*.pdf",
        "http://*/*.PDF",
        "https://*/*.PDF",
        "file:///*/*.PDF"
      ],
      "js": ["insertPdfIframe.js"],
      "run_at": "document_start"
    }
  ]
}
